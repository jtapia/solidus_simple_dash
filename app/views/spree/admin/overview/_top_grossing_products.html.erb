<div class='col-4'>
  <h5 class='bar-title'>
    <span><%= t('spree.simple_dash.top_grossing_products') %></span>
  </h5>

  <div id='top_grossing_products' style='width:80%; height:220px;'></div>

  <div id='pie-legend'>
    <% @top_grossing_variants.each_with_index do |v,i| %>
      <div class='pie-element'>
        <i style='background-color:<%= @pie_colors[i] %>'>&nbsp;</i>
        <label><%= v[0].truncate(35) %></label>
        <span><%= number_to_currency v[1], :precision => 0 %></span>
      </div>
    <% end %>
  </div>
</div>
